@model IEnumerable<AjaxMVCDemo.Models.Product_TBL>

@{
    ViewBag.Title = "Index";
}
    <div>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>


@using (Ajax.BeginForm(new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "searchResalt", InsertionMode = InsertionMode.Replace }))
{
    <div>
        @Html.TextBox("pname")
        <input type="submit" name="name" value="Search" />
    </div>
}

<div id="searchResalt">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTE)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QTE)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Product_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Product_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Product_id })
                </td>
            </tr>
        }

    </table>
</div>